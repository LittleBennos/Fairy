# Django Settings
DEBUG=False  # IMPORTANT: Set to False in production! Only use True for local development
SECRET_KEY=CHANGE_THIS_GENERATE_NEW_SECRET_KEY  # Run: python generate_secret_key.py
JWT_SECRET_KEY=CHANGE_THIS_GENERATE_NEW_JWT_KEY  # Optional: Separate key for JWT tokens
ALLOWED_HOSTS=localhost,127.0.0.1  # Add your production domain

# Database - REQUIRED - No defaults for security
DB_NAME=fairy_db
DB_USER=fairy_user
# Password Requirements:
# - Minimum 12 characters
# - At least one uppercase and lowercase letter
# - At least one number
# - At least one special character (!@#$%^&*()_+-=[]{}|;:,.<>?)
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# CORS & CSRF Configuration
# For development: Frontend URLs that need API access
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# For production: Add your domain with scheme and port
# Example: CSRF_TRUSTED_ORIGINS=https://fairy.example.com,https://www.fairy.example.com
# For VPS/Docker: Add http://YOUR_IP:5173,http://YOUR_IP:8000
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8000,http://127.0.0.1:8000

# Default Superuser (Optional - created automatically on first run)
# Leave empty to skip superuser creation
DJANGO_SUPERUSER_USERNAME=
DJANGO_SUPERUSER_EMAIL=
DJANGO_SUPERUSER_PASSWORD=

# JWT
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440